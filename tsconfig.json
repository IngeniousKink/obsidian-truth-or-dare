{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "node16",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
		"moduleResolution": "node16",
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "main.ts"
, "tests/snapshots.test.mts"  ]
}