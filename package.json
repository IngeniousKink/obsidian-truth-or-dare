{
	"name": "obsidian-truth-or-dare-plugin",
	"version": "1.0.0",
	"description": "This is a truth or dare plugin for Obsidian (https://obsidian.md)",
	"exports": "./src/main.js",
	"scripts": {
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "node --experimental-vm-modules ./node_modules/.bin/jest",
		"dev": "node esbuild.config.mjs",
		"watch": "cross-env BUILD=dev obsidian-plugin dev src/main.ts",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"web-dev": "vite",
		"web-build": "npm run build && vite build --base=./",
		"web-preview": "vite preview",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives"
	},
	"keywords": [],
	"author": "",
	"type": "module",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^29.5.11",
		"@types/node": "^18.15.0",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"@types/react-test-renderer": "^18.0.7",
		"@typescript-eslint/eslint-plugin": "^7.4.0",
		"@typescript-eslint/parser": "^7.4.0",
		"builtin-modules": "3.3.0",
		"cross-env": "^7.0.3",
		"esbuild": "0.17.3",
		"esm": "^3.2.25",
		"obsidian": "latest",
		"obsidian-plugin-cli": "^0.9.0",
		"react-test-renderer": "^18.2.0",
		"tslib": "2.4.0",
		"typescript": "^5.4.3",
		"vite-plugin-node-polyfills": "^0.21.0"
	},
	"dependencies": {
		"@nostr-dev-kit/ndk": "^2.6.1",
		"@types/seedrandom": "^3.0.8",
		"@vitejs/plugin-react": "^4.2.1",
		"jest": "^29.7.0",
		"mdast-util-from-markdown": "^2.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"seedrandom": "^3.0.5",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"vite": "^5.1.5"
	},
	"engines": {
		"node": ">=16"
	}
}
