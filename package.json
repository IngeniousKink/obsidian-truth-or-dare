{
	"name": "obsidian-truth-or-dare-plugin",
	"version": "1.0.0",
	"description": "This is a truth or dare plugin for Obsidian (https://obsidian.md)",
	"exports": "./src/main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"watch": "cross-env BUILD=dev obsidian-plugin dev src/main.ts",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "node --experimental-vm-modules ./node_modules/.bin/jest"
	},
	"keywords": [],
	"author": "",
	"type": "module",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^29.5.11",
		"@types/node": "^16.11.6",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"cross-env": "^7.0.3",
		"esbuild": "0.17.3",
		"esm": "^3.2.25",
		"obsidian": "latest",
		"obsidian-plugin-cli": "^0.9.0",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	},
	"dependencies": {
		"jest": "^29.7.0",
		"mdast-util-from-markdown": "^2.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ts-jest": "^29.1.2"
	},
	"engines": {
		"node": ">=16"
	},
	"jest": {
		"extensionsToTreatAsEsm": [
			".ts"
		],
		"moduleNameMapper": {
			"^(\\.{1,2}/.*)\\.js$": "$1"
		},
		"transform": {
			"^.+\\.m?[tj]sx?$": [
				"ts-jest",
				{
					"useESM": true
				}
			]
		}
	}
}
